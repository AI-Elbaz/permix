{
  "name": "permix",
  "displayName": "Permix",
  "type": "module",
  "version": "2.0.0-rc.1",
  "private": false,
  "packageManager": "pnpm@10.5.1",
  "description": "Permix is a lightweight, framework-agnostic, type-safe permissions management library for JavaScript applications on the client and server sides.",
  "author": "Valerii Strilets",
  "license": "MIT",
  "funding": "https://github.com/sponsors/letstri",
  "homepage": "https://permix.letstri.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letstri/permix.git",
    "directory": "permix"
  },
  "bugs": {
    "url": "https://github.com/letstri/permix/issues"
  },
  "keywords": [
    "permissions",
    "authorization",
    "acl",
    "access-control",
    "typescript",
    "react",
    "vue",
    "type-safe",
    "rbac",
    "security",
    "permissions-management",
    "frontend",
    "javascript"
  ],
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.mjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.mjs"
    },
    "./trpc": {
      "types": "./dist/trpc/index.d.ts",
      "import": "./dist/trpc/index.mjs"
    },
    "./express": {
      "types": "./dist/express/index.d.ts",
      "import": "./dist/express/index.mjs"
    },
    "./hono": {
      "types": "./dist/hono/index.d.ts",
      "import": "./dist/hono/index.mjs"
    }
  },
  "main": "./dist/core/index.mjs",
  "types": "./dist/core/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepublishOnly": "run-p test build && pnpm run scripts:copy-readme",
    "build": "run-p build:unbuild && pnpm run scripts:update-coverage",
    "build:unbuild": "unbuild",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check-types": "tsc --noEmit",
    "scripts:copy-readme": "tsx ./scripts/copy-readme",
    "scripts:update-coverage": "vitest run --coverage && tsx ./scripts/update-coverage"
  },
  "peerDependencies": {
    "@trpc/server": ">=10",
    "express": ">=4",
    "hono": ">=4",
    "react": ">=18",
    "vue": ">=3"
  },
  "peerDependenciesMeta": {
    "@trpc/server": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "hono": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.7",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^17.1.8",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.0.7",
    "zod": "^3.24.2"
  }
}
